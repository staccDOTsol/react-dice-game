{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false

  },
  "exclude": ["node_modules"],
  "include": [
    "src"
  ]
}